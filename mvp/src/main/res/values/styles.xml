<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="common_text">
        <item name="android:layout_height">@dimen/common_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:textColor">@color/common_text_color_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lines">1</item>
    </style>

    <style name="common_btn">
        <item name="android:layout_height">@dimen/common_btn_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:gravity">center</item>
    </style>
</resources>